@model List<UserDto>
@{
    ViewData["Title"] = "All Users";
    int i = 0;
}

<section class="container mt-5 mb-3">
    <h2 class="m-3">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count > 0)
            {
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">S/N</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Email Confirmed</th>
                            <th scope="col">Roles</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@(++i)</td>

                                    <td>@user.Username</td>

                                    <td>@user.Email</td>

                                    <td>@user.EmailConfirmed</td>

                                    <td>@(String.Join(", ", user.RoleNames))</td>

                                    <td><a class="btn btn-outline-primary btn-sm" href=@($"/Admin/ManageUser/edit/{user.Id}")> Manage User </a></td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="jumbotron"> <h3> No user to display</h3></div>
            }

        </div>
    </div>
</section>
